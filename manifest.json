{
  "manifest_version": 3,
  "name": "Read Aloud V2",
  "version": "1.0",
  "description": "Read Aloud: The fastest way to convert selected text from any website into spoken words, No limitations!",
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "tts"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/blue/icon16.png",
      "32": "icons/blue/icon32.png",
      "48": "icons/blue/icon48.png"
    }
  },
  "icons": {
    "16": "icons/blue/icon16.png",
    "32": "icons/blue/icon32.png",
    "48": "icons/blue/icon48.png",
    "128": "icons/blue/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "tts-style.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}